{
  "name": "dokus",
  "version": "0.0.0",
  "repository": "github:cidb/hugo-theme-cidb-dokus",
  "license": "Apache-2.0",
  "scripts": {
    "_cd:docs": "cd userguide_root &&",
    "_dev": "npm run _cd:docs -- hugo  --themesDir ../.. --bind  0.0.0.0 --baseURL \"${BASE_URL:-http://localhost}\" -p 9001 server  --disableFastRender",
    "dev": "dotenv -- npm run _dev",
    "build": "npm run _cd:docs -- hugo --themesDir ../.. --cleanDestinationDir",
    "_cp:bs": "npx cpy 'node_modules/bootstrap/scss/vendor/*' assets/_vendor/bootstrap/scss/",
    "index": "cd userguide_root && hugo --themesDir ../.. --cleanDestinationDir -d 'public_pagefind' && pagefind --source 'public_pagefind' --output-path ../static/_pagefind",
    "get:hugo-modules": "node tools/getHugoModules/index.mjs",
    "_mkdir:hugo-mod": "node tools/mkdirp-hugo-mod.js ..",
    "postinstall": "npm run _mkdir:hugo-mod"
  },
  "dependencies": {
    "bootstrap": "5.3.7",
    "bootstrap-icons": "^1.13.1",
    "dotenv-cli": "^8.0.0",
    "fuse.js": "^7.1.0",
    "jquery": "^3.7.1",
    "pagedjs": "^0.4.3",
    "pagefind": "^1.3.0"
  },
  "devDependencies": {
    "cpy-cli": "^5.0.0",
    "prettier": "^3.5.3"
  },
  "peerDependencies": {
    "hugo-extended": "0.147.8",
    "npm-check-updates": "^18.0.1"
  },
  "engines": {
    "node": ">=22"
  },
  "spelling": "cSpell:ignore hugo-theme-cidb-dokus hugo twbs pkgs userguide_root -"
}
